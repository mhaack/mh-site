---
layout: base
---

<main class="grid tracking-tight text-3xl md:text-5xl">
  <div class="px-14 md:px-32 pb-8 md:pb-16 justify-start font-bold">
    <div class="box-content max-w-6xl mx-auto [&>h1]:mb-4">
      {{ content | safe }}
    </div>
  </div>

  {% for section in collections.home | sort( false, false, "data.order" ) %}
  <article id="{{ section.template.fileSlugStr }}" class="p-14 md:px-32 md:py-16 justify-start font-bold {{ section.data.theme.background }} {{ section.data.theme.text }}">
    <div class="box-content max-w-6xl mx-auto">
      {{ section.templateContent | safe }}
      {% if section.data.icon %}
      <span class="[&>svg]:mt-8 [&>svg]:w-20 [&>svg]:h-20 {% if section.data.theme.icon %}{{ section.data.theme.icon }}{% endif %}">
      {% include ("icons/" + section.data.icon + ".svg") %}
      </span>
      {% endif %}
    </div>
  </article>
  {% endfor %}  
</main>