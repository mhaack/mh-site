---
layout: default
---

<div class="px-8 md:px-32 pb-8 md:pb-16 justify-start font-bold">
  <div class="box-content max-w-6xl mx-auto [&>h1]:mb-4">
    {{ content | safe }}
  </div>
</div>

{% for section in collections.home | sort( false, false, "data.order" ) %}
<article id="{{ section.template.fileSlugStr }}"
  class="p-10 md:px-32 md:py-16 justify-start {{ section.data.theme.background }} {{ section.data.theme.text }}">
  <div class="box-content max-w-6xl mx-auto [&>h2]:md:text-5xl">
    {{ section.templateContent | safe }}
  </div>
</article>
{% endfor %}