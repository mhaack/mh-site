---
layout: base2
prose: false
---

<main class="grid tracking-tight text-3xl md:text-5xl">
  <div class="px-8 md:px-32 pb-16 md:pb-32 justify-start font-bold">
    <div class="box-content max-w-6xl mx-auto [&>h1]:mb-4">
      {{ content | safe }}
    </div>
  </div>

  {% for section in collections.home | sort( false, false, "data.order" ) %}
  <article id="{{ section.template.fileSlugStr }}" class="px-8 py-16 md:p-32 justify-start font-bold {{ section.data.theme.background }} {{ section.data.theme.text }}">
    <div class="box-content max-w-6xl mx-auto">
      {{ section.templateContent | safe }}
      <span class="[&>svg]:mt-8 [&>svg]:w-20 [&>svg]:h-20 {% if section.data.theme.icon %}{{ section.data.theme.icon }}{% endif %}">
      {% if section.data.icon %}{% include ("icons/" + section.data.icon + ".svg") %}{% endif %}
      </span>
    </div>
  </article>
  {% endfor %}  
</main>