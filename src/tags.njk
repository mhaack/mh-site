---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
layout: page
permalink: /tags/{{ tag }}/
eleventyComputed:
  title: Tagged “{{ tag }}”
  description: "All posts tagged “{{ tag }}”"
prose: false
---

{% set postslist = collections[tag] %}
{% include "partials/postslist.njk" %}
<div class="text-center sm:text-left border-t">
  <h3 class="mt-8 mb-4 text-2xl font-medium">All Tags...</h3>
  {% set tags = collections.tagList %}
  {% include "partials/taglist.njk" %}
</div>