  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% if ignore %}
    <meta name="robots" content="noindex">
    {% endif %}
    <link rel="canonical" href={{ page.url | url | absoluteUrl(site.url) }}>

    <title>
      {%- if title -%} 
        {{ title | escape }}
      {%- else -%}
        {{ site.name }}
      {%- endif -%}
    </title>

    <link rel="preload" href="/assets/fonts/ibm-plex-sans-v13-latin-regular.woff2" as="font" type="font/woff2" crossorigin> 
    <link rel="icon" type= “image/x-icon” href="/assets/icons/favicon.ico">
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/icons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/icons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/icons/favicon-16x16.png">
    <link rel="manifest" href="/assets/manifest.webmanifest">
    <link rel="mask-icon" href="/assets/icons/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">

    <meta property="og:title" content="{{  title or site.name | escape }}">
    <meta property="og:site_name" content="{{ site.name }}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ site.url + page.url }}">
    <meta name="twitter:card" content="summary_large_image">

    {%- if site.author.twitterHandle -%}
    <meta name="twitter:creator" content="@{{ site.author.twitterHandle | replace('@', '') }}"/>
    {%- endif -%}
    {% set desc = description %}
    {%- if not desc -%}
      {% set desc = content | striptags | truncate(140) %}
    {% endif %}
    {%- if desc -%}
    <meta name="description" content="{{ desc | escape  }}">
    <meta property="og:description" content="{{ desc | escape }}">
    {%- endif -%}
    <meta name="author" content="{{ site.author.name }}">
    <meta name="generator" content="{{ eleventy.generator }}">

    {% if images.feature %}
    <meta property="og:image" content="{{ images.feature | url | absoluteUrl(site.url) }}">
    <meta name="twitter:image" content="{{ images.feature | url | absoluteUrl(site.url) }}">
    {% endif %}

    <link href="{{ '/assets/css/theme.css' | url }}" rel="stylesheet">

    {% if env.isProd %}
    <script defer data-domain="markus-haack.com" src="/assets/js/script.js"></script>
    {% endif %}
  </head>