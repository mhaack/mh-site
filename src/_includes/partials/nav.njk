{% set navPages = collections.pages | eleventyNavigation %}
<nav x-data="{ open: false }" class="py-2 bg-white shadow-md relative">
  <div class="flex-grow max-w-screen-xl mx-auto px-4 sm:px-6">
    <div class="flex justify-between h-20">
      <div class="flex justify-between w-full">
        <div class="flex items-center">
          <a
            href="/"
            class="block text-slate-900 hover:text-slate-600"
            data-a11y="false"
            title="Navigate back to the homepage"
            aria-label="Navigate back to the homepage"
            back="false">
            <svg
              height="66"
              viewBox="0 0 100 100"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
              class="fill-slate-900 hover:fill-mountain-800">
              <g>
                <path d="M84,5H16C9.9,5,5,9.6,5,15.3V67c0,5.7,4.9,10.3,11,10.3h7.2v15.3c0,0.9,0.6,1.8,1.5,2.2c0.4,0.2,0.7,0.2,1.1,0.2
                  c0.6,0,1.2-0.2,1.7-0.5l22.7-17.2H84c6.1,0,11-4.6,11-10.3V15.3C95,9.6,90.1,5,84,5z M89.9,66.9c0,3-2.6,5.4-5.8,5.4H49.2
                  c-0.6,0-1.2,0.2-1.7,0.5L28.4,87.3V74.7c0-1.3-1.2-2.4-2.6-2.4h-9.8c-3.2,0-5.8-2.4-5.8-5.4V15.5c0-3,2.6-5.4,5.8-5.4h68.2
                  c3.2,0,5.8,2.4,5.8,5.4V66.9z"/>
                <path d="M35.6,49.3l-5.3-23h-8.9v29.2h5.7V35.7c0-0.6,0-1.4,0-2.4c0-1,0-1.8,0-2.4l5.5,24.5h5.9L44,31c0,0.6,0,1.3,0,2.4
                  c0,1,0,1.8,0,2.4v19.7h5.7V26.3h-8.8L35.6,49.3z"/>
                <polygon points="72.7,37.4 61.4,37.4 61.4,26.3 55.3,26.3 55.3,55.5 61.4,55.5 61.4,42.5 72.7,42.5 72.7,55.5 78.8,55.5 78.8,26.3
                72.7,26.3"/>
              </g>
            </svg>
          </a>
        </div>
        <ul class="hidden sm:ml-6 sm:flex sm:items-center">
          {% for entry in navPages %}
            {% set currentAttribute = '' %}
            {%- if page.url == entry.url -%}
              {%- set currentAttribute = 'aria-current="page"' -%}
            {%- endif -%}
            <li class="mr-4 md:mr-8 last:mr-0">
              <a href="{{ entry.url | url }}" {{- currentAttribute | safe -}} class="{% if page.url == entry.url %}border-mountain-800{% else %}border-slate-100{% endif %} text-slate-800 border-b-2 font-light hover:no-underline hover:bg-mountain-50 hover:border-slate-500 my-4 p-2 md:p-4 ">{{ entry.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
      <div class="flex items-center -mr-2 sm:hidden">
        <button
          id="btn-burger"
          class="inline-flex items-center justify-center p-2 text-slate-500 transition duration-150 ease-in-out rounded-md
            hover:text-slate-600 hover:bg-mountain-100 focus:outline-none focus:text-slate-600 focus:bg-mountain-100 transform
            hover:scale-110"
          aria-label="Main menu">
          <svg id="svg-content"
            class="block w-6 h-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button> 
      </div>
    </div>
  </div>
  <div id="menu-mobile" class="hidden sm:hidden">
    <ul class="pt-2 pb-3">
      {% for entry in navPages %}
        <li>
          <a {% if page.url != entry.url %} href="{{ entry.url | url }}" {% endif %} alt="Link to {{ entry.title }}" class="block pl-4 pr-4 py-2 {% if page.url == entry.url %}bg-slate-100 text-mountain-800{% else %}text-slate-500{% endif %} text-base font-medium hover:bg-mountain-50 focus:outline-none focus:text-slate-700 focus:bg-mountain-50 transition duration-150 ease-in-out">
            {{ entry.title }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
</nav>