{% for tag in collections.tagList %}
  {% set tagUrl %}/tags/{{ tag }}/{% endset %}

  <a href="{{ tagUrl | url }}" class="font-normal no-underline items-center bg-gray-100 px-3 h-6 inline-flex text-primary/80 hover:text-emerald-700 hover:no-underline text-xs justify-center leading-normal whitespace-no-wrap rounded-md mt-2 mr-2 last:mr-0">#{{ tag }}</a>

{% endfor %}