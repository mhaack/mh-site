---
layout: base
pagination:
  data: collections.posts
  size: 1
  alias: post
permalink: /opengraph/{{ post.url }}/
---

<main class="max-w-[1200px] flex flex-row place-items-center">
  <a href="/" data-a11y="false" title="Navigate back to the homepage" aria-label="Navigate back to the homepage"
    back="false" class="basis-1/3 px-32">
    <div class="bg-gray-800 w-32 pt-16 px-4 pb-4 text-white">
      {% include 'icons/mh.svg' %}
    </div>
  </a>
  <div class="basis-2/3 px-8">
    <span class="mt-4 text-sm text-blue-dianne-700">
      <time datetime="{{ post.date | htmlDateString }}">
        {{ post.date | readableDate }}
      </time>
    </span>
    <h2 class="mt-2 text-5xl font-semibold">
      {{ post.data.title }}
    </h2>
  </div>
</main>