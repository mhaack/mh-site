{
    "name": "eleventy-mh",
    "version": "1.0.0",
    "license": "MIT",
    "devDependencies": {
        "@11ty/eleventy": "^0.12.1",
        "@11ty/eleventy-img": "^1.0.0",
        "@11ty/eleventy-plugin-rss": "^1.0.9",
        "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.4",
        "@tailwindcss/typography": "^0.5.0",
        "autoprefixer": "^10.4.0",
        "clean-css": "^5.2.2",
        "eleventy-plugin-purgecss": "^0.1.2",
        "eleventy-plugin-reading-time": "^0.0.1",
        "html-minifier": "^4.0.0",
        "markdown-it": "^12.3.0",
        "markdown-it-anchor": "^8.4.1",
        "markdown-it-for-inline": "^0.1.1",
        "npm-run-all": "^4.1.5",
        "postcss-cli": "^9.1.0",
        "prettier": "^2.4.1",
        "tailwindcss": "^3.0.7",
        "tailwindcss-debug-screens": "^2.2.1",
        "terser": "^5.10.0"
    },
    "scripts": {
        "dev": "npm-run-all clean --parallel dev:* --print-label",
        "dev:11ty": "env ELEVENTY_ENV=development eleventy --serve",
        "dev:twnd": "postcss src/css/tailwind.css -o dist/assets/css/theme.css --watch",
        "build": "npm-run-all clean build:* --print-label",
        "build:11ty": "env ELEVENTY_ENV=production eleventy",
        "build:twnd": "postcss src/css/tailwind.css -o dist/assets/css/theme.css",
        "format": "prettier --write \"src/**/*.{js,json,md}\"",
        "clean": "rm -rf ./dist"
    }
}
